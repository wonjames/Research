<section xml:id="C7.S4">
<title>Symmetry</title>          
<para xml:id="C7.S4.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="1" xml:id="C7.S4.p1.s1">
 <Math equation-number="7.4.1" mode="display" xml:id="C7.S4.E1">\operatorname{erf}\left(-z\right)=-\operatorname{erf}\left(z\right),</Math> , <Math equation-number="7.4.2" mode="display" xml:id="C7.S4.E2">\operatorname{erfc}\left(-z\right)=2-\operatorname{erfc}\left(z\right),</Math> , <Math equation-number="7.4.3" mode="display" xml:id="C7.S4.E3">w\left(-z\right)=2e^{-z^{2}}-w\left(z\right)</Math>.
</sentence>

<sentence sentence-num-in-para="2" sentence-num-in-section="2" xml:id="C7.S4.p1.s2">
<Math equation-number="7.4.4" mode="display" xml:id="C7.S4.E4">F\left(-z\right)=-F\left(z\right)</Math>.
</sentence>

<sentence sentence-num-in-para="3" sentence-num-in-section="3" xml:id="C7.S4.p1.s3">
<Math equation-number="7.4.5" mode="display" xml:id="C7.S4.E5">C\left(-z\right)=-C\left(z\right),S\left(-z\right)=-S\left(z\right),</Math> <Math equation-number="7.4.6" mode="display" xml:id="C7.S4.E6">C\left(iz\right)=iC\left(z\right),S\left(iz\right)=-iS\left(z\right)</Math>.
</sentence>

<sentence sentence-num-in-para="4" sentence-num-in-section="4" xml:id="C7.S4.p1.s4">
<Math equation-number="7.4.7" mode="display" xml:id="C7.S4.E7">\mathrm{f}\left(iz\right)=(1/\sqrt{2})e^{\frac{1}{4}\pi i-\frac{1}{2}\pi iz^{2 }}-i\mathrm{f}\left(z\right),\mathrm{g}\left(iz\right)=(1/\sqrt{2})e^{-\frac{1}{4}\pi i-\frac{1}{2}\pi iz^{ 2}}+i\mathrm{g}\left(z\right)</Math>.
</sentence>

<sentence sentence-num-in-para="5" sentence-num-in-section="5" xml:id="C7.S4.p1.s5">
<Math equation-number="7.4.8" mode="display" xml:id="C7.S4.E8">\mathrm{f}\left(-z\right)=\sqrt{2}\cos\left(\tfrac{1}{4}\pi+\tfrac{1}{2}\pi z^ {2}\right)-\mathrm{f}\left(z\right),\mathrm{g}\left(-z\right)=\sqrt{2}\sin\left(\tfrac{1}{4}\pi+\tfrac{1}{2}\pi z^ {2}\right)-\mathrm{g}\left(z\right)</Math>.
</sentence>

</para>
 
</section>
