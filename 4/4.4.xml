<?xml version="1.0" encoding="UTF-8"?>
<section xml:id="C4.S4">
<title>Special Values and Limits</title>         
<subsection xml:id="C4.S4.SS1">
<title>Logarithms</title>          
<para xml:id="C4.S4.SS1.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="1" xml:id="C4.S4.SS1.p1.s1">
 <Math equation-number="4.4.1" mode="display" xml:id="C4.S4.E1">\ln 1=0,</Math> , <Math equation-number="4.4.2" mode="display" xml:id="C4.S4.E2">\ln\left(-1\pm\mathrm{i}0\right)=\pm\pi\mathrm{i},</Math> , <Math equation-number="4.4.3" mode="display" xml:id="C4.S4.E3">\ln\left(\pm\mathrm{i}\right)=\pm\tfrac{1}{2}\pi\mathrm{i}</Math>.
</sentence>

</para>
 
</subsection>
 
<subsection xml:id="C4.S4.SS2">
<title>Powers</title>           
<para xml:id="C4.S4.SS2.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="2" xml:id="C4.S4.SS2.p1.s1">
 <Math equation-number="4.4.4" mode="display" xml:id="C4.S4.E4">e^{0}=1,</Math> , <Math equation-number="4.4.5" mode="display" xml:id="C4.S4.E5">e^{\pm\pi\mathrm{i}}=-1,</Math> , <Math equation-number="4.4.6" mode="display" xml:id="C4.S4.E6">e^{\pm\pi\mathrm{i}/2}=\pm\mathrm{i},</Math> , <Math equation-number="4.4.7" mode="display" xml:id="C4.S4.E7">e^{2\pi k\mathrm{i}}=1, if k\in\mathbb{Z},</Math> , <Math equation-number="4.4.8" mode="display" xml:id="C4.S4.E8">e^{\pm\pi\mathrm{i}/3}=\frac{1}{2}\pm\mathrm{i}\frac{\sqrt{3}}{2},</Math> , <Math equation-number="4.4.9" mode="display" xml:id="C4.S4.E9">e^{\pm 2\pi\mathrm{i}/3}=-\frac{1}{2}\pm\mathrm{i}\frac{\sqrt{3}}{2},</Math> , <Math equation-number="4.4.10" mode="display" xml:id="C4.S4.E10">e^{\pm\pi\mathrm{i}/4}=\frac{1}{\sqrt{2}}\pm\mathrm{i}\frac{1}{\sqrt{2}},</Math> , <Math equation-number="4.4.11" mode="display" xml:id="C4.S4.E11">e^{\pm 3\pi\mathrm{i}/4}=-\frac{1}{\sqrt{2}}\pm\mathrm{i}\frac{1}{\sqrt{2}},</Math> , <Math equation-number="4.4.12" mode="display" xml:id="C4.S4.E12">{\mathrm{i}^{\pm\mathrm{i}}}=e^{\mp\pi/2}</Math>.
</sentence>

</para>
 
</subsection>
 
<subsection xml:id="C4.S4.SS3">
<title>Limits</title>           
 
<para xml:id="C4.S4.SS3.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="3" xml:id="C4.S4.SS3.p1.s1">
 <Math equation-number="4.4.13" mode="display" xml:id="C4.S4.E13">\lim_{x\to\infty}x^{-a}\ln x=0, if \Re a&gt;0,</Math> <Math equation-number="4.4.14" mode="display" xml:id="C4.S4.E14">\lim_{x\to 0}x^{a}\ln x=0, if \Re a&gt;0,</Math> <Math equation-number="4.4.15" mode="display" xml:id="C4.S4.E15">\lim_{x\to\infty}x^{a}e^{-x}=0,</Math> <Math equation-number="4.4.16" mode="display" xml:id="C4.S4.E16">\lim_{z\to\infty}z^{a}e^{-z}=0, if |\operatorname{ph}z|\leq\tfrac{1}{2}\pi-\delta (&lt;\tfrac{1}{2}\pi),</Math> where <Math mode="inline" xml:id="C4.S4.SS3.p1.m1">a</Math> ( <Math mode="inline" xml:id="C4.S4.SS3.p1.m2">\in\mathbb{C}</Math> ) and <Math mode="inline" xml:id="C4.S4.SS3.p1.m3">\delta</Math> ( <Math mode="inline" xml:id="C4.S4.SS3.p1.m4">\in(0,\tfrac{1}{2}\pi]</Math> ) are constants.
</sentence>

<sentence sentence-num-in-para="2" sentence-num-in-section="4" xml:id="C4.S4.SS3.p1.s2">
<Math equation-number="4.4.17" mode="display" xml:id="C4.S4.E17">\lim_{n\to\infty}\left(1+\frac{z}{n}\right)^{n}=e^{z}, if z= constant</Math>.
</sentence>

<sentence sentence-num-in-para="3" sentence-num-in-section="5" xml:id="C4.S4.SS3.p1.s3">
<Math equation-number="4.4.18" mode="display" xml:id="C4.S4.E18">\lim_{n\to\infty}\left(1+\frac{1}{n}\right)^{n}=e</Math>.
</sentence>

<sentence sentence-num-in-para="4" sentence-num-in-section="6" xml:id="C4.S4.SS3.p1.s4">
<Math equation-number="4.4.19" mode="display" xml:id="C4.S4.E19">\lim_{n\to\infty}\left(\left(\sum^{n}_{k=1}\frac{1}{k}\right)-\ln n\right)= \gamma=0.57721\ 56649\ 01532\ 86060\dots,</Math> where <Math mode="inline" xml:id="C4.S4.SS3.p1.m5">\gamma</Math> is Eulerâ€™s constant; see (5.2.3).
</sentence>

</para>
    
</subsection>
 
</section>
