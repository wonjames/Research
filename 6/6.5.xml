<section xml:id="C6.S5">
<title>Further Interrelations</title>        
     
<para xml:id="C6.S5.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="1" xml:id="C6.S5.p1.s1">
When <Math mode="inline" xml:id="C6.S5.p1.m1">x&gt;0</Math> , <Math equation-number="6.5.1" mode="display" xml:id="C6.S5.E1">E_{1}\left(-x\pm i0\right)=-\mathrm{Ei}\left(x\right)\mp i\pi,</Math> <Math equation-number="6.5.2" mode="display" xml:id="C6.S5.E2">\mathrm{Ei}\left(x\right)=-\tfrac{1}{2}(E_{1}\left(-x+i0\right)+E_{1}\left(-x- i0\right)),</Math> <Math equation-number="6.5.3" mode="display" xml:id="C6.S5.E3">\tfrac{1}{2}(\mathrm{Ei}\left(x\right)+E_{1}\left(x\right))=\mathrm{Shi}\left( x\right)=-i\mathrm{Si}\left(ix\right),</Math> <Math equation-number="6.5.4" mode="display" xml:id="C6.S5.E4">\tfrac{1}{2}(\mathrm{Ei}\left(x\right)-E_{1}\left(x\right))=\mathrm{Chi}\left( x\right)=\mathrm{Ci}\left(ix\right)-\tfrac{1}{2}\pi i</Math>.
</sentence>

</para>
 
<para xml:id="C6.S5.p2">

<sentence sentence-num-in-para="1" sentence-num-in-section="2" xml:id="C6.S5.p2.s1">
When <Math mode="inline" xml:id="C6.S5.p2.m1">|\operatorname{ph}z|&lt;\frac{1}{2}\pi</Math> , <Math equation-number="6.5.5" mode="display" xml:id="C6.S5.E5">\mathrm{Si}\left(z\right)=\tfrac{1}{2}i(E_{1}\left(-iz\right)-E_{1}\left(iz \right))+\tfrac{1}{2}\pi,</Math> , <Math equation-number="6.5.6" mode="display" xml:id="C6.S5.E6">\mathrm{Ci}\left(z\right)=-\tfrac{1}{2}(E_{1}\left(iz\right)+E_{1}\left(-iz \right)),</Math> <Math equation-number="6.5.7" mode="display" xml:id="C6.S5.E7">\mathrm{g}\left(z\right)\pm i\mathrm{f}\left(z\right)=E_{1}\left(\mp iz\right) e^{\mp iz}</Math>.
</sentence>

</para>
 
</section>
