<section xml:id="C6.S1">
<title>Special Notation</title>        
 
<para xml:id="C6.S1.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="1" xml:id="C6.S1.p1.s1">
(For other notation see Notation for the Special Functions.)
</sentence>

<sentence sentence-num-in-para="2" sentence-num-in-section="2" sentence-num-in-table="1" xml:id="C6.S1.p1.t1.s1">
<Math mode="inline" xml:id="C6.S1.p1.t1.r1.m1">x</Math>
</sentence>

<sentence sentence-num-in-para="3" sentence-num-in-section="3" sentence-num-in-table="2" xml:id="C6.S1.p1.t1.s2">
real variable.  
</sentence>

<sentence sentence-num-in-para="4" sentence-num-in-section="4" sentence-num-in-table="3" xml:id="C6.S1.p1.t1.s3">
<Math mode="inline" xml:id="C6.S1.p1.t1.r2.m1">z</Math>
</sentence>

<sentence sentence-num-in-para="5" sentence-num-in-section="5" sentence-num-in-table="4" xml:id="C6.S1.p1.t1.s4">
complex variable.  
</sentence>

<sentence sentence-num-in-para="6" sentence-num-in-section="6" sentence-num-in-table="5" xml:id="C6.S1.p1.t1.s5">
<Math mode="inline" xml:id="C6.S1.p1.t1.r3.m1">n</Math>
</sentence>

<sentence sentence-num-in-para="7" sentence-num-in-section="7" sentence-num-in-table="6" xml:id="C6.S1.p1.t1.s6">
nonnegative integer.  
</sentence>

<sentence sentence-num-in-para="8" sentence-num-in-section="8" sentence-num-in-table="7" xml:id="C6.S1.p1.t1.s7">
<Math mode="inline" xml:id="C6.S1.p1.t1.r4.m1">\delta</Math>
</sentence>

<sentence sentence-num-in-para="9" sentence-num-in-section="9" sentence-num-in-table="8" xml:id="C6.S1.p1.t1.s8">
