<?xml version="1.0" encoding="UTF-8"?>
<section xml:id="C10.S52">
<title>Limiting Forms</title>        
  
<subsection xml:id="C10.S52.SS1">
<title><Math mode="inline" xml:id="C10.S52.SS1.m1">z\to 0</Math></title>        
 
<para xml:id="C10.S52.SS1.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="1" xml:id="C10.S52.SS1.p1.s1">
 <Math equation-number="10.52.1" mode="display" xml:id="C10.S52.E1">\mathsf{j}_{n}\left(z\right),{\mathsf{i}^{(1)}_{n}}\left(z\right)\sim z^{n}/(2 n+1)!!,</Math> <Math equation-number="10.52.2" mode="display" xml:id="C10.S52.E2">-\mathsf{y}_{n}\left(z\right),i{\mathsf{h}^{(1)}_{n}}\left(z\right),-i{\mathsf {h}^{(2)}_{n}}\left(z\right),(-1)^{n}{\mathsf{i}^{(2)}_{n}}\left(z\right),(2/ \pi)\mathsf{k}_{n}\left(z\right)\sim(2n-1)!!/z^{n+1}</Math>.
</sentence>

</para>

 
</subsection>
 
<subsection xml:id="C10.S52.SS2">
<title><Math mode="inline" xml:id="C10.S52.SS2.m1">z\to\infty</Math></title>        
 
<para xml:id="C10.S52.SS2.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="2" xml:id="C10.S52.SS2.p1.s1">
 <Math equation-number="10.52.3" mode="display" xml:id="C10.S52.E3">\mathsf{j}_{n}\left(z\right)=z^{-1}\sin\left(z-\tfrac{1}{2}n\pi\right)+{ \mathrm{e}^{|\Im z|}}O\left(z^{-2}\right),\mathsf{y}_{n}\left(z\right)=-z^{-1}\cos\left(z-\tfrac{1}{2}n\pi\right)+{ \mathrm{e}^{|\Im z|}}O\left(z^{-2}\right),</Math> <Math equation-number="10.52.4" mode="display" xml:id="C10.S52.E4">{\mathsf{h}^{(1)}_{n}}\left(z\right)\sim i^{-n-1}z^{-1}e^{iz},{\mathsf{h}^{(2)}_{n}}\left(z\right)\sim i^{n+1}z^{-1}e^{-iz},</Math> <Math equation-number="10.52.5" mode="display" xml:id="C10.S52.E5">{\mathsf{i}^{(1)}_{n}}\left(z\right)\sim{\mathsf{i}^{(2)}_{n}}\left(z\right) \sim\tfrac{1}{2}z^{-1}e^{z}, if |\operatorname{ph}z|\leq\tfrac{1}{2}\pi-\delta(&lt;\tfrac{1}{2}\pi),</Math> <Math equation-number="10.52.6" mode="display" xml:id="C10.S52.E6">\mathsf{k}_{n}\left(z\right)\sim\tfrac{1}{2}\pi z^{-1}e^{-z}</Math>.
</sentence>

</para>

 
</subsection>
 
</section>
