<section xml:id="C15.S7">
<title>Continued Fractions</title>          
<para xml:id="C15.S7.p1">

<sentence sentence-num-in-para="1" sentence-num-in-section="1" xml:id="C15.S7.p1.s1">
If <Math mode="inline" xml:id="C15.S7.p1.m1">|\operatorname{ph}\left(1-z\right)|&lt;\pi</Math> ,then <Math equation-number="15.7.1" mode="display" xml:id="C15.S7.E1">\frac{\mathbf{F}\left(a,b;c;z\right)}{\mathbf{F}\left(a,b+1;c+1;z\right)}=t_{0 }-\cfrac{u_{1}z}{t_{1}-\cfrac{u_{2}z}{t_{2}-\cfrac{u_{3}z}{t_{3}-\cdots}}},</Math> where <Math equation-number="15.7.2" mode="display" xml:id="C15.S7.E2">t_{n}=c+n,u_{2n+1}=(a+n)(c-b+n),u_{2n}=(b+n)(c-a+n)</Math>.
</sentence>

</para>
 
<para xml:id="C15.S7.p2">

<sentence sentence-num-in-para="1" sentence-num-in-section="2" xml:id="C15.S7.p2.s1">
If <Math mode="inline" xml:id="C15.S7.p2.m1">|z|&lt;1</Math> ,then <Math equation-number="15.7.3" mode="display" xml:id="C15.S7.E3">\frac{\mathbf{F}\left(a,b;c;z\right)}{\mathbf{F}\left(a,b+1;c+1;z\right)}=v_{0 }-\cfrac{w_{1}}{v_{1}-\cfrac{w_{2}}{v_{2}-\cfrac{w_{3}}{v_{3}-\cdots}}},</Math> where <Math equation-number="15.7.4" mode="display" xml:id="C15.S7.E4">v_{n}=c+n+(b-a+n+1)z,w_{n}=(b+n)(c-a+n)z</Math>.
</sentence>

</para>
 
<para xml:id="C15.S7.p3">

<sentence sentence-num-in-para="1" sentence-num-in-section="3" xml:id="C15.S7.p3.s1">
If <Math mode="inline" xml:id="C15.S7.p3.m1">\Re z&lt;\tfrac{1}{2}</Math> ,then <Math equation-number="15.7.5" mode="display" xml:id="C15.S7.E5">\frac{\mathbf{F}\left(a,b;c;z\right)}{\mathbf{F}\left(a+1,b+1;c+1;z\right)}={x _{0}+\cfrac{y_{1}}{x_{1}+\cfrac{y_{2}}{x_{2}+\cfrac{y_{3}}{x_{3}+\cdots}}}},</Math> where <Math equation-number="15.7.6" mode="display" xml:id="C15.S7.E6">x_{n}=c+n-(a+b+2n+1)z,y_{n}=(a+n)(b+n)z(1-z)</Math>.
</sentence>

</para>
 
<para xml:id="C15.S7.p4">

<sentence sentence-num-in-para="1" sentence-num-in-section="4" xml:id="C15.S7.p4.s1">
